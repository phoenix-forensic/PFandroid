<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient"
    android:clipToPadding="false"
    android:padding="@dimen/dashboard_padding_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/analyticsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_analytics_title"
            android:textColor="@color/dashboard_text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dashboard_analytics_subtitle"
            android:textColor="@color/dashboard_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_spacing_large"
            app:cardBackgroundColor="@color/dashboard_surface"
            app:cardCornerRadius="@dimen/dashboard_card_radius"
            app:cardElevation="@dimen/dashboard_card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dashboard_padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.2"
                    android:text="@string/dashboard_section_system"
                    android:textAllCaps="true"
                    android:textColor="@color/dashboard_text_secondary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dashboard_status_firewall"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/DashboardStatusPill"
                            android:text="@string/dashboard_state_active"
                            android:backgroundTint="@color/dashboard_status_green" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dashboard_status_tracker"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/DashboardStatusPill"
                            android:text="@string/dashboard_state_running"
                            android:backgroundTint="@color/dashboard_status_blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dashboard_status_dns"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/DashboardStatusPill"
                            android:text="@string/dashboard_state_monitoring"
                            android:backgroundTint="@color/dashboard_status_purple" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/dashboard_status_analytics"
                            android:textColor="@color/dashboard_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/DashboardStatusPill"
                            android:text="@string/dashboard_state_active"
                            android:backgroundTint="@color/dashboard_status_teal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_spacing_large"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_label_requests_today"
                        android:textColor="@color/dashboard_text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="6"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_label_blocks_today"
                        android:textColor="@color/dashboard_text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="8"
                        android:textColor="@color/dashboard_status_purple"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_label_unique_visitors"
                        android:textColor="@color/dashboard_text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="16"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_label_active_rules"
                        android:textColor="@color/dashboard_text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="14"
                        android:textColor="@color/dashboard_status_teal"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_spacing_large"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_heading_activity"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_purple" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_blocked_ads"
                                    android:textColor="@color/dashboard_text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_time_0900"
                                    android:textColor="@color/dashboard_text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                style="@style/DashboardStatusPill"
                                android:text="@string/dashboard_badge_firewall"
                                android:backgroundTint="@color/dashboard_status_purple" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_teal" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_blocked_facebook"
                                    android:textColor="@color/dashboard_text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_time_0845"
                                    android:textColor="@color/dashboard_text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                style="@style/DashboardStatusPill"
                                android:text="@string/dashboard_badge_firewall"
                                android:backgroundTint="@color/dashboard_status_teal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_blue" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_pixel_meta"
                                    android:textColor="@color/dashboard_text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_time_0812"
                                    android:textColor="@color/dashboard_text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                style="@style/DashboardStatusPill"
                                android:text="@string/dashboard_badge_tracking"
                                android:backgroundTint="@color/dashboard_status_blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_orange" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_redirect"
                                    android:textColor="@color/dashboard_text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dashboard_feed_time_0748"
                                    android:textColor="@color/dashboard_text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                style="@style/DashboardStatusPill"
                                android:text="@string/dashboard_badge_tracking"
                                android:backgroundTint="@color/dashboard_status_orange" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_heading_request_sources"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/dashboard_content_desc_pie_chart"
                        android:src="@drawable/illustration_pie_chart" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_teal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_source_direct"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_purple" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_source_referrals"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28%"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_blue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_source_organic"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27%"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_spacing_large"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_heading_top_countries"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/dashboard_country_brazil"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <ProgressBar
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="120dp"
                                android:layout_height="8dp"
                                android:max="100"
                                android:progress="85"
                                android:progressBackgroundTint="@color/dashboard_divider"
                                android:progressTint="@color/dashboard_status_purple" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/dashboard_country_united_states"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <ProgressBar
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="120dp"
                                android:layout_height="8dp"
                                android:max="100"
                                android:progress="70"
                                android:progressBackgroundTint="@color/dashboard_divider"
                                android:progressTint="@color/dashboard_status_teal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/dashboard_country_canada"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <ProgressBar
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="120dp"
                                android:layout_height="8dp"
                                android:max="100"
                                android:progress="55"
                                android:progressBackgroundTint="@color/dashboard_divider"
                                android:progressTint="@color/dashboard_status_blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/dashboard_country_germany"
                                android:textColor="@color/dashboard_text_primary"
                                android:textSize="14sp" />

                            <ProgressBar
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="120dp"
                                android:layout_height="8dp"
                                android:max="100"
                                android:progress="40"
                                android:progressBackgroundTint="@color/dashboard_divider"
                                android:progressTint="@color/dashboard_status_orange" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_surface"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="@dimen/dashboard_card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_heading_system_health"
                        android:textColor="@color/dashboard_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_green" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_status_firewall"
                                android:textColor="@color/dashboard_text_secondary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dashboard_state_active"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_blue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_status_tracker"
                                android:textColor="@color/dashboard_text_secondary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dashboard_state_running"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/bg_circle_solid"
                                android:backgroundTint="@color/dashboard_status_teal" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/dashboard_label_block_rate"
                                android:textColor="@color/dashboard_text_secondary"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@color/dashboard_text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
